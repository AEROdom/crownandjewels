{{#if model.image}}
	<img class="u-full-width" src={{model.image}}>
{{else}}
	{{post-map model=model}}
{{/if}}

<section class="container post-container">

	<div class="letter-head">
		<p>{{moment-format model.date "MMMM Do YYYY"}}
		<br />{{model.location}}</p>
	</div>

<hr>

<h4>{{model.title}}</h4>

<p><b>{{model.excerpt}}</b></p>

<p>{{model.text}}</p>

</section>